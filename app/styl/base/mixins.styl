centralizer($horizontal = true, $vertical = true)
  position absolute
  if ($horizontal and $vertical)
    top 50%
    left 50%
    transform translate(-50%, -50%)
  else if ($horizontal)
    left 50%
    transform translate(-50%, 0)
  else if ($vertical)
    top 50%
    transform translate(0, -50%)

media($width)
  @media screen and (max-width: $width)
    {block}

placeholder()
  &::-webkit-input-placeholder
    {block}
  &:-moz-placeholder
    {block}
  &::-moz-placeholder
    {block}
  &:-ms-input-placeholder
    {block}

cols($lg, $md, $sm, $xs)
  make-xs-column($xs)
  make-sm-column($sm)
  make-md-column($md)
  make-lg-column($lg)