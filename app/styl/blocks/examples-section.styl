.examples-section
  position relative
  transition 0.4s ease-in-out
  overflow hidden

  .tap-fly
    position relative
    overflow hidden
    padding 0
    height 400px
    background url("../../static/img/tap-to-fly.png") no-repeat center center
    background-size cover
    cols(4, 4, 5, 12)

    &::after
      content ""
      position absolute
      top 50%
      transform translate(0, -50%) scale(1.0)
      right 0
      height 150px
      width 75px
      border-radius 150px 0 0 150px
      background-color #e8ecf1
      box-shadow 0 0 0 40px #eef1f5, 0 0 0 75px #f4f6f9
      transition 0.5s ease-in-out

    &:hover::after
      animation pulsation-tap 1s ease-in-out
      animation-iteration-count infinite


    .tap-fly-desc
      width 300px
      z-index 20
      centralizer(true, true)

      a
        display block
        transition color 0.3s ease-in-out

        &:hover
          color $accent-color

      p, a
        word-break break-all
        text-align center


  .fly-higher
    padding 0 !important
    height 400px
    background url("../../static/img/fly-higher.png") no-repeat
    background-size cover
    cols(8, 8, 7, 12)

    &:hover .btn-white
      transform rotate(0deg)

    &:hover .dark-side

      +media(1920px)
        width 600px

      +media(1300px)
        width 500px

      +media(1150px)
        width 400px

      +media(992px)
        width 300px

      +media(930px)
        width 250px

      +media(860px)
        width 230px

      +media(820px)
        width 200px

      +media($screen-xs-max)
        width 100%

    .dark-side
      position relative
      float left
      width 400px
      height 400px
      background-color alpha(black, 70%)
      transition width 0.5s ease-in-out

      +media($screen-md-max)
        width 200px

      +media($screen-xs-max)
        width 100%
        height 200px

      p
        width 100%
        padding-left 40px
        centralizer(true, true)
        +media($screen-md-max)
          padding-left 15px
          font-size 28px
        +media($screen-xs-max)
          text-align center

    .btn-white
      position relative
      float left
      top 50%
      transform rotate(-90deg)
      transition transform 0.5s ease-in-out
      margin-left 75px
      &::after
        content ""
        position absolute
        display block
        width 1px
        right 205px
        top -15%
        height 70px
        background-color white
        transform rotate(-90deg)

      +media($screen-xs-max)
        top 40px
        position relative
        transform rotate(0)
        margin 0 auto
        text-align center
        float none
        &::after
          display none


@keyframes pulsation-tap
  0%
    transform translate(0, -50%) scale(1.0)
  15%
    transform translate(0, -50%) scale(1.1)
  30%
    transform translate(0, -50%) scale(1.2)
  45%
    transform translate(0, -50%) scale(1.4)
  60%
    transform translate(0, -50%) scale(1.2)
  75%
    transform translate(0, -50%) scale(1.1)
  100%
    transform translate(0, -50%) scale(1.0)