.header-section
  position relative
  overflow hidden

.header-banner
  position absolute
  overflow hidden
  height 100%
  width 100%
  centralizer(true, true)
  transition 0.4s ease-in-out

  .gray-section
    height 100%
    background-color $grey-light
    cols(8, 8, 8, 8)

  .red-section
    position relative
    height 100%
    padding 0
    margin 0
    background-color $accent-color
    cols(4, 4, 4, 4)
    &::before
      content 'Mars'
      position absolute
      display block
      top 200px
      right -120px
      transform rotate(90deg)
      text-shadow 0 0 55px rgba(0, 1, 1, 0.15)
      cursor default
      color $accent-color
      font-weight bolder
      text-transform uppercase
      font-size 200px
      +media($screen-lg-min)
        font-size 150px
      +media($screen-xs-max)
        font-size 100px
        right -100px
      +media($screen-xs-min)
        font-size 60px
        right -50px

  .drone
    position absolute
    height 400px
    width 400px
    border-radius 50%
    background-color white
    centralizer(false, true)
    +media($screen-md-max)
      height 300px
      width 300px
    +media($screen-xs-max)
      display none
    &::before
      content ''
      position absolute
      display block
      height 600px
      width 600px
      background url("../../static/img/drone.png") no-repeat center center
      background-size 100%
      centralizer(true, true)
      +media($screen-md-max)
        width 500px
        height 500px
      +media($screen-sm-max)
        height 350px
        width 350px


.header-inner
  position relative
  width 100%
  transition 0.4s ease-in-out
  .row
    position relative

  .header-phone
    margin 35px 0 0 40px
    +media($screen-xs-min)
      display none
    a
      position relative
      padding-left 20px
      color $muted-text
      transition 0.3s ease-in-out
      &:hover
        color $accent-color
      i
        position absolute
        top 2px
        left 0

  .header-nav
    margin-top 30px
    li
      +media($screen-xs-min)
        display block
    a
      position relative
      margin-right 25px
      display block
      font-size 18px
      font-weight bold
      color white
      +media($screen-xs-min)
        margin 0 0 10px 0
      &::after
        content ""
        position absolute
        display block
        height 2px
        width 0
        background-color white
        transition 0.2s ease-in-out
      &:hover::after
        width 100%
    span
      display block
      font-size 18px
      font-weight bold
      color white
      cursor pointer

.scrolldown-text
  position absolute
  width 100px
  left -45px
  bottom -130px
  font-weight bold
  animation bounce 2s infinite
  +media($screen-xs-max)
    display none

@keyframes bounce
  0%
  20%
  50%
  80%
  100%
    transform translateY(0) rotate(-90deg)
  40%
    transform translateY(-25px) rotate(-90deg)
  60%
    transform translateY(-10px) rotate(-90deg)